@model Pie


<div class="card">
    <img src="@Model.ImageThumbnailUrl" alt="">
    <div class="box-details">
        <span class="badge rounded-pill text-bg-warning text-end">@Model.Price.ToString("c")</span>
        <a asp-controller="Pie" asp-action="Details" asp-route-id="@Model.PieId" class="name-pie">@Model.Name</a>
        <p>@Model.ShortDescription</p>
    </div>
    <div class="addToCart">
        <p class="button">
            <a class="btn btn-primary" 
            asp-controller="ShoppingCart" 
            asp-action="AddToShoppingCart"
            asp-route-pieId="@Model.PieId">Add to cart</a>
        </p>
    </div>
</div>
